{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true, 
     "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots" : ["./src/@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "strict": false                    
  },
  "include": [
    "src/**/*",
    "src/mail-templates/*.hbs"
  ]
}